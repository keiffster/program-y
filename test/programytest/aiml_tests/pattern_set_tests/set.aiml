<aiml>

    <category>
        <pattern>MY FAVORITE COLOR IS <set>color</set>
        </pattern>
        <template>
            <star /> IS A NICE COLOR.
        </template>
    </category>

    <category>
        <pattern>I DO NOT LIKE <set>color</set> *
        </pattern>
        <template>
            IT IS OK, <star/> IS NOT MY BEST COLOUR EITHER
        </template>
    </category>

    <category>
        <pattern><set>color</set> IS A NICE COLOUR
        </pattern>
        <template>
            YES <star /> IS A LOVELY COLOUR.
        </template>
    </category>

    <category>
        <pattern>Is <set name="number" /> a number
        </pattern>
        <template>
            Yes <star/> is a number
        </template>
    </category>

    <category>
        <pattern>Is <set name="roman" /> a roman number
        </pattern>
        <template>
            Yes <star/> is a roman number
        </template>
    </category>

    <category>
        <pattern>Is <set name="stopword" /> a stopword
        </pattern>
        <template>
            Yes <star/> is a stopword
        </template>
    </category>
    
</aiml>