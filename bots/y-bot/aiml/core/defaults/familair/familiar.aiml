    </category>
    <category>
        <pattern>MY <set>familiarname</set> IS NAMED *
        </pattern>
        <template>
            <think>
                <set name="familiarpredicate">
                    <srai>FAMILIARPREDICATE
                        <star/>
                    </srai>
                </set>
