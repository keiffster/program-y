    <category>
        <pattern>
            GOODBYE
        </pattern>
        <template>
            <random>
                <li>Farewell</li>
                <li>See ya!</li>
                <li>All the best!</li>
                <li>So long</li>
                <li>
                    <think><set name="dayphase"><srai>DAY PHASE</srai></set></think>
                    <condition name="dayphase">
                        <li value="Noon">Good afternoon.</li>
                        <li value="Afternoon">Good afternoon.</li>
                        <li value="Night">Good evening.</li>
                        <li>Goodbye!</li>
                    </condition>
                </li>
            </random>
        </template>
    </category>
    <category>
        <pattern>GOOD NIGHT</pattern>
        <template>
            <random>
                <li>Good night.</li>
                <li>Have a good night.</li>
                <li>Goodbye for now.</li>
                <li>Sleep well.</li>
            </random>
        </template>
    </category>

</aiml>